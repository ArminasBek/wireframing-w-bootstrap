doctype html
html(lang="en")
  head
    title Jade - Sass - Bootstrap Wireframe
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
    link(rel="stylesheet", href="css/styles.css")
    include mixins
  body
    
    .container
      .row
        .col-sm-4
          h1 SiteName

        ul.col-sm-8.list-inline.text-right.menu-right
          li
            a(href=""): .glyphicon.glyphicon-envelope Newsletter
          li  
            a(href=""): .glyphicon.glyphicon-leaf RSS
          li |
          li  
            form.form-inline(role="form")
              .form-group
                  label.sr-only Email Address
                  input.form-control(type="email", placeholder="Enter Email")
                  button.btn.btn-default(type="submit") Sign Up!
      nav.row
        .col-sm-12
        ul.nav.nav-tabs
          li.active: a(href="") Books
          li: a(href="") Magazines
          li: a(href="") Comics
          li: a(href="") Audio Books
          li: a(href="") Action Figures
          li: a(href="") Costumes

      .row(style="padding:-top: 10px")

        .col-sm-5
          include col-main
        .col-sm-4.col-secondary
          include col-secondary
        .col-sm-3
          include col-tertiary
